generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{
  id Int @id @default(autoincrement())
  email String @unique
  password String 
  googleId String? @unique
  created_at DateTime @default(now())

  // relasi ke model user
  profile User_profile?
  wallet Account?
}

enum JL{
  L 
  P
}

model User_profile{
  id Int @id @default(autoincrement())
  nama String?
  jenis_kelamin JL?
  tgl_lahir DateTime?
  created_at DateTime @default(now())

  // relasi
  user_id Int @unique
  user User @relation(fields: [user_id],references: [id])
  
}

enum typeTransaksi{
  PEMASUKAN
  PENGELUARAN
}


model Account{
  id Int @id @default(autoincrement())
  user_id Int @unique
  saldo Decimal @default(0)
  updated_at DateTime @default(now())
  created_at DateTime @default(now())
  // relasi ke tabel transaksi one to many
  transaksi Transaksi[]
  // relasi ke table user one to one
  user User @relation(fields: [user_id], references: [id])
}

model Transaksi{
  id Int @id @default(autoincrement())
  name String?
  type typeTransaksi
  jumlah Decimal
  deskripsi String?
  created_at DateTime @default(now())

// relasi ke table account one to many
  account_id Int
  wallet Account @relation(fields: [account_id],references: [id])
}